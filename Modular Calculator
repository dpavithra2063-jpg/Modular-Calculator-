import java.util.Scanner;

/**
 * Modular Calculator Application
 * Demonstrates method overloading, exception handling,
 * pass-by-value, and clean modular design.
 */
public class ModularCalculator {

    /**
     * Adds two integers
     */
    static int add(int a, int b) {
        return a + b;
    }

    /**
     * Adds two double values (Method Overloading)
     */
    static double add(double a, double b) {
        return a + b;
    }

    /**
     * Subtracts two integers
     */
    static int subtract(int a, int b) {
        return a - b;
    }

    /**
     * Multiplies two integers
     */
    static int multiply(int a, int b) {
        return a * b;
    }

    /**
     * Divides two integers
     * Throws exception if divisor is zero
     */
    static double divide(int a, int b) {
        if (b == 0) {
            throw new ArithmeticException("Division by zero is not allowed");
        }
        return (double) a / b;
    }

    /**
     * Utility method to demonstrate pass-by-value
     */
    static void modifyValue(int x) {
        x = x + 10;
        System.out.println("Inside method (modified value): " + x);
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Independent method testing
        System.out.println("Addition (int): " + add(10, 20));
        System.out.println("Addition (double): " + add(10.5, 20.5));
        System.out.println("Subtraction: " + subtract(30, 10));
        System.out.println("Multiplication: " + multiply(5, 4));

        try {
            System.out.println("Division: " + divide(10, 2));
        } catch (ArithmeticException e) {
            System.out.println(e.getMessage());
        }

        // Pass-by-value demonstration
        int value = 50;
        System.out.println("\nBefore method call: " + value);
        modifyValue(value);
        System.out.println("After method call: " + value);

        sc.close();
    }
}
